package bt;
import javax.swing.JOptionPane;
public class ShowTwoNumbers {
	public static void main(String [] args) {
String num1;
String num2;

String strNotification = "You have just entered" ;
num1 = JOptionPane.showInputDialog(null,"Please enter the first number","Input the first number",
		JOptionPane.INFORMATION_MESSAGE);
strNotification += num1 + "and";
num2 = JOptionPane.showInputDialog(null,"Please enter the second number","Input the second number",
		JOptionPane.INFORMATION_MESSAGE);
strNotification += num2;
JOptionPane.showMessageDialog(null, strNotification,"Show two numbers",
		JOptionPane.INFORMATION_MESSAGE);
System.exit(0);
